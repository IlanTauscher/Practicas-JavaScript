@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<script>
    /*ACT 1*/
    let Persona = {
        Nombre: "Ilan",
        Apellido: "Tauscher",
        Edad: 17,
        Estudia: true,
        Hobbies: ["Gaming", "Anime", "Series"]
    };
    console.log("Información de la Persona:");
    console.log("Nombre: " + Persona.Nombre);
    console.log("Apellido: " + Persona.Apellido);
    console.log("Edad: " + Persona.Edad);
    console.log("Estudia: " + (Persona.Estudia ? "Sí" : "No"));
    console.log("Hobbies: " + Persona.Hobbies.join(", "));

    /*ACT 2*/
    let cuentas = [
        { nombre: "Juan Pérez", cbu: "1234567890", saldo: 15000 },
        { nombre: "María Gómez", cbu: "0987654321", saldo: 9000 },
        { nombre: "Carlos Díaz", cbu: "111122223333", saldo: 20000 }
    ];

    let totalSaldos = cuentas.reduce((acumulador, cuentas) => acumulador + cuentas.saldo, 0);
    let promedioSaldo = totalSaldos / cuentas.length;
    console.log(`El promedio de los saldos es: $${promedioSaldo}`);

    let cuentasConMasDe10000 = cuentas.filter(cuentas => cuentas.saldo > 10000);
    let cbusConMasDe10000 = cuentasConMasDe10000.map(cuentas => cuentas.cbu);
    console.log("CBUs de cuentas con saldo mayor a $10,000:", cbusConMasDe10000);

    function mostrarDatosPorCBU(cbu) {
        let cuentaEncontrada = cuentas.find(cuentas => cuentas.cbu === cbu);
        if (cuentaEncontrada) {
            console.log("Datos de la cuenta encontrada:", cuentaEncontrada);
        } else {
            console.log("No se encontró ninguna cuenta con ese CBU.");
        }
    
    function eliminarCuentaPorCBU(cbu) {
        let indice = cuentas.findIndex(cuenta => cuenta.cbu === cbu);
        if (indice !== -1) {
            cuentas.splice(indice, 1);
            console.log(`Cuenta con CBU ${cbu} eliminada.`);
        } else {
            console.log("No se encontró ninguna cuenta con ese CBU para eliminar.");
        }
    }
    
    mostrarDatosPorCBU("1234567890");
    eliminarCuentaPorCBU("0987654321");
}
</script>